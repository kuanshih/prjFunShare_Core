@model IEnumerable<FunShare_Admin.Models.CouponList>

@{
    ViewData["Title"] = "優惠券一覽表";
}

<h1>優惠券總覽</h1>

<div align="right">
    <a asp-controller="ManagerMarketing" asp-action="CouponCreate" class="btn btn-outline-primary">新增優惠券</a>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                序
                @*  @Html.DisplayNameFor(model => model.CouponId) *@
            </th>
            <th>
                名稱
                @* @Html.DisplayNameFor(model => model.Name) *@
            </th>
            <th>
                折扣
                @*  @Html.DisplayNameFor(model => model.Discount) *@
            </th>
            <th>
                折扣內容
                @*  @Html.DisplayNameFor(model => model.Description) *@
            </th>
            <th>
                產品編號
                @*  @Html.DisplayNameFor(model => model.ProductId) *@
            </th>
            <th>
                截止日期
                @*  @Html.DisplayNameFor(model => model.DueDate) *@
            </th>
            <th>編輯</th>
        </tr>
    </thead>
    <tbody>
        @{
            int count = 0;
            foreach (var item in Model)
            {
                count++;
                <tr>
                    <td>
                        @count
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Discount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Product.ProductName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DueDate)
                    </td>
                    <td>
                        @Html.ActionLink("編輯", "CouponEdit","ManagerMarketing" ,new { id=item.CouponId}, new {Class="btn btn-primary"})
                        |  @Html.ActionLink("刪除", "CouponDelete","ManagerMarketing",new { id=item.CouponId},new {onclick="return confirm('確定要刪除嗎?')", @class="btn btn-danger"})
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

